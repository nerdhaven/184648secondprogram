<Window x:Class="_184648SecondProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_184648SecondProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="#FF8000FF">
    <StackPanel>
        <TextBox x:Name="txtBName" FontFamily="Comic Sans ms" Background="#FF8000FF" />
        <Button x:Name="btnGreeting" Content="We are chaos, type your name then click us for worship" Click="btnGreeting_Click" 
                FontStyle="Oblique" FontSize="18" Background="#FF8000FF" BorderBrush="Black" FontFamily="Comic Sans ms" />
        <Label x:Name="lblGreeting" FontSize="14" FontFamily="Comic Sans ms" FontStyle="Oblique" />
    </StackPanel>
</Window>
